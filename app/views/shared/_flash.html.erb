<div id="flash_messages", data-controller="autohide" >
  <% if flash[:notice] %>
    <div class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block">
      <p class="notice"><%= t(notice) %></p>
    </div>
  <% elsif flash[:alert] %>
    <div class="py-2 px-3 bg-green-50 mb-5 text-red-500 font-medium rounded-lg inline-block">
      <p class="alert"><%= t(alert) %></p>
    </div>
  <% end %>
</div>
